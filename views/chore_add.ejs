<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Housemates App</title>
    <link rel="icon" type="image/ico" href="images/logo.ico"/>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,700,400' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/dashboard.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/script_chore_add.js"></script>
  </head>
  <body>
    <div class="menu">
      <div id="settings">
        <a href="/settings"><img src="images/icon_settings.png" width="50px"></a>
      </div>
      <div id="logout"><a href="/logout"><i>Logout</i></a></div>
      <div id="username">
        <%= user.name %>
      </div> <!-- username -->
      <div id="title">
        <a href="/dashboard">Homies</a>
      </div> <!-- title -->
    </div> <!-- menu -->

    <div class="wrapper">
      <div class="sidebar">
        <a href="/chores" class="tooltip" title="CHORES"><img src="images/sidebar-icon_chores.png" title=""></a>
        <a href="/bills" class="tooltip" title="BILLS"><img src="images/sidebar-icon_bills.png" title=""></a>
        <a href="/calendar" class="tooltip" title="CALENDAR"><img src="images/sidebar-icon_cal.png" title=""></a>
        <a href="/grocery" class="tooltip" title="GROCERY"><img src="images/sidebar-icon_grocery.png" title=""></a>
        <a href="/chat" class="tooltip" title="CHAT"><img src="images/sidebar-icon_chat.png" title=""></a>
      </div> <!-- sidebar -->


      <div class="content-dash">
        <!-- <form id="chore_form" class="form" method="put" action="/addChore"> -->
        <!-- <form id="chore-form" method="post"> -->
        <!-- <form id="chore-form"> -->

          <!-- Chore Name: <input id="chore_name" type="text" placeholder="Mopping" required="required"/><br>
          Assign to: <input id="assign_user" type="text" placeholder="Name" required="required"/><br>
          Due Date: <input id="chore_date" type="date" placeholder="" required="required"/><br>
          <input id="chore-formb"  type="submit" value="Go"/> -->

        <!-- </form> -->

        <!-- ADD NEW CHORE FORM -->
        Add New Chore
        <form action="/chore_add_new" method="post">
          <input id="chore_name" name="chore_name" type="text" placeholder="Chore Name"/><br>
          <input id="description" name="description" type="text" placeholder="Description"/><br>
          <select id="assignee" name="assignee">
            <% for(var i=0; i<members.length; i++) {%>
              <option value="<%= members[i] %>"> <%= members[i] %> </option>
            <% } %>
          </select><br>
          <input id="due_date" name="due_date" type="date" placeholder="MM/DD/YYYY"><br>
          <input id="button1"  type="submit" value="Add Chore"/>
        </form>

        <div id="test" style="color:blue">.</div>
        <br><br>
        OR
        <br><br>
        <!-- ADD ASSIGNMENT TO EXISTING CHORE -->
        Assign Existing Chore
        <form action="/chore_add_existing" method="post">
          <select id="select_chore_name" name="chore_name">
          </select><br>
          <select id="assignee" name="assignee">
            <% for(var i=0; i<members.length; i++) {%>
              <option value="<%= members[i] %>"> <%= members[i] %> </option>
            <% } %>
          </select><br>
          <input id="due_date" name="due_date" type="date" placeholder="MM/DD/YYYY"><br>
          <input id="button1"  type="submit" value="Assign Chore"/>
        </form>

        <br><br>
      <a href="/chores">Back to Chore Management</a>
      </div> <!-- content-dash -->
    </div> <!-- wrapper -->
  </body>
</html>
